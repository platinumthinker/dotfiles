Config { font = "xft:DejaVu Sans:size=8"
       , bgColor = "#221818"
       , fgColor = "#dedede"
       , position = Top
       , commands = [ Run Cpu ["-L","3","-H","50","--high","#f0c040"] 60
                    , Run Memory ["-t","Mem: <usedratio>%"] 60
					, Run BatteryP ["BAT0"]
                    ["-t", "| <timeleft>[<left>%]",
               	     "-L", "10", "-H", "80", "-p", "3",
               	     "--", "-O", "<fc=green>On</fc> - ", "-i", "",
                     "-L", "-15", "-H", "-5",
                     "-l", "red", "-m", "blue", "-h", "green"] 600
					, Run Date "%a %b %_d  %H:%M" "date" 60
                    , Run StdinReader 
]
, sepChar = "%"
, alignSep = "}{"
, template = "%StdinReader% }{ %cpu% %memory% %battery% %date%"
}
