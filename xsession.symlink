~/scripts/wal.sh

xrdb -merge /home/thinker/.Xdefaults
setxkbmap -layout us,ru -variant -option \
              grp:menu_toggle,terminate:ctrl_alt_bksp,\
              ctrl:nocaps&
kbdd &
xhost +local:&

xscreensaver -no-splash &
synclient TapButton1=1 TapButton2=2 TapButton3=3 TouchpadOff=0&
pamusb-agent&

start-pulseaudio-x11&

export AWT_TOOLKIT=XToolkit
export QT_XFT=true
export GDK_USE_XFT=1

exec ck-launch-session dbus-launch awesome
