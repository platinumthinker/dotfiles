	email = andrey.teplyashin@eltex.loc
[core]
	editor = git
	editor = /usr/bin/vim
	excludesfile = /home/thinker/.gitignore
[color]
	ui = always
[merge]
	tool = fugitive 
[mergetool "fugitive"]
    cmd  = vim -f -c "Gdiff" "$MERGED"
	trustExitCode = true
    keepBackup = false
[mergetool "gfugitive"]
    cmd  = gvim -f -c "Gdiff" "$MERGED"
	trustExitCode = true
    keepBackup = false
[push]
	default = simple
